<% if master_admin_signed_in? %>
  <div class="contents devise-form">
    <h2>店舗新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "owner/restaurants/shared/error_messages", resource: resource %>
      <%= f.hidden_field :postal_code, value: "0000000" %>
      <%= f.hidden_field :phone_number, value: "0000000000" %>
      <%= f.hidden_field :name, value: "店舗名" %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以内
        )</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "owner/restaurants/shared/links" %>

  </div>
<% else %>
  <p>権限がありません。</p>
  <div><%= link_to 'ログイン画面へ', owner_restaurant_session_path %></div>
<% end %>
