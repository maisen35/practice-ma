<% if @current_restaurant.id == @restaurant.id %>
  <%# pc %>
  <div class="contents owner-restaurants-edit-pc">
    <h2>店舗情報の編集</h2>
    <%= render partial: 'shared/messages/error_messages', locals: { model: @current_restaurant } %>

    <%= form_with model: @current_restaurant, url: owner_restaurant_path, method: :patch, local: :true do |f| %>
      <table class="owner-restaurants-edit--form">
        <tbody>
          <tr>
            <td colspan="2" class="name"><h3><%= f.label :name %></h3></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr class="head">
            <td rowspan="2"><h3><%= f.label :restaurant_image %></h3></td>
            <td colspan="2"><%= f.attachment_field :restaurant_image, class: "attachment_image", accept: "image/*" %></td>
          </tr>
          <tr>
            <td colspan="2" class="image-preview"></td>
          </tr>
          <tr class="head">
            <td rowspan="5"><h3>住所</h3></td>
            <td><p><%= f.label :postal_code, '郵便番号(半角7桁、ハイフンなし)' %></p></td>
            <td><%= f.text_field :postal_code, placeholder: '1234567', required: true, id: "postal_code-pc" %></td>
          </tr>
          <tr>
            <td><p><%= f.label :prefecture %></p></td>
            <td><%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, include_blank: '都道府県', class: "restaurant_prefecture" %></td>
          </tr>
          <tr>
            <td><p><%= f.label :city  %></p></td>
            <td><%= f.text_field :city, required: true, class: "restaurant_city" %></td>
          </tr>
          <tr>
            <td><p><%= f.label :street %></p></td>
            <td><%= f.text_field :street, required: true, class: "restaurant_street" %></td>
          </tr>
          <tr>
            <td><p><%= f.label :building %></p></td>
            <td><%= f.text_field :building %></td>
          </tr>
          <tr class="head">
            <td rowspan="6"><h3>連絡先</h3></td>
            <td><p><%= f.label :phone_number, '電話番号(半角数字、ハイフンなし)' %></p></td>
            <td><%= f.text_field :phone_number, placeholder: '123456789012' %></td>
          </tr>
          <tr>
            <td><p><%= f.label :email %></p></td>
            <td><%= f.text_field :email, placeholder: 'example.com', required: true %></td>
          </tr>
          <tr>
            <td><p><%= f.label :twitter %></p></td>
            <td><%= f.text_field :twitter %></td>
          </tr>
          <tr>
            <td><p><%= f.label :facebook%></p></td>
            <td><%= f.text_field :facebook %></td>
          </tr>
          <tr>
            <td><p><%= f.label :instagram %></p></td>
            <td><%= f.text_field :instagram %></td>
          </tr>
          <tr>
            <td><p><%= f.label :corporate %></p></td>
            <td><%= f.text_field :corporate %></td>
          </tr>
          <tr class="head">
            <td colspan="2" class="introduction"><h3>店舗紹介</h3></td>
            <td><%= f.text_area :introduction, size: '50x10' %></td>
          </tr>
          <tr class="head">
            <td colspan="2" class="completion_message"><h3>完了メッセージ</h3><p>お客様のご予約が完了された時に<br>表示されるメッセージです。<br>伝言等があればご記載ください。</p></td>
            <td><%= f.text_area :completion_message, size: '50x10' %></td>
          </tr>

        </tbody>
      </table>
      <div class="submit"><%= f.submit '更新', id: 'restaurant-update', class: 'btn btn-primary' %></div>
    <% end %>
  </div>

  <%# tb & sp %>
  <div class="contents owner-restaurants-edit-sp">

    <%= render partial: 'shared/messages/error_messages', locals: { model: @current_restaurant } %>

