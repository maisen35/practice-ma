<div class="contents public-users-registrations-new">
  <h2>パスワードの変更</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "public/users/shared/error_messages", resource: resource %>
    <div class="form-group">
    <h3><%= f.label :email %></h3>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{("error-form" if resource.errors.include?(:email))}" %>
    <%= render partial: 'shared/messages/each_error_messages', locals: { model: resource, key: :email } %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group">
    <h3><%= f.label :password, '新しいパスワード' %></h3>
    <small>(<%= @minimum_password_length %>文字以上)</small><br>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{("error-form" if resource.errors.include?(:password))}" %>
    <%= render partial: 'shared/messages/each_error_messages', locals: { model: resource, key: :password } %>
    </div>
    <div class="form-group">
    <h3><%= f.label :password_confirmation, '新しいパスワード（再入力）' %></h3>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{("error-form" if resource.errors.include?(:password_confirmation))}" %>
    <%= render partial: 'shared/messages/each_error_messages', locals: { model: resource, key: :password_confirmation } %>
    </div>
    <div class="form-group">
    <h3><%= f.label :current_password, '現在のパスワード' %></h3>
    <%= f.password_field :current_password, class: "form-control #{("error-form" if resource.errors.include?(:current_password))}" %>
    <%= render partial: 'shared/messages/each_error_messages', locals: { model: resource, key: :current_password } %>
    </div>
    <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "前の画面へ", :back %>
</div>
