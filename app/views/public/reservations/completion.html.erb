<div class="contents public-reservations-completion">
  <% url = request.fullpath %>
  <% if params[:new_reservation_id] %>
    <h2>ご予約が確定しました！</h2>
    <p><%= link_to '店舗からのメッセージをご確認ください。', user_reservation_path(current_user, params[:new_reservation_id]) %></p>
  <% else %>
    <h2>ご予約は確定済みです！</h2>
    <p><%= link_to '予約一覧', user_reservations_path %></p>
  <% end %>
</div>
